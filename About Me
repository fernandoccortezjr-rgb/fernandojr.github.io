  <script>
    const items = Array.from(document.querySelectorAll('.item')).map((el) => ({
      el,
      title: (el.dataset.title || '').toLowerCase(),
      keywords: (el.dataset.keywords || '').toLowerCase(),
      text: (el.textContent || '').toLowerCase().replace(/\s+/g, ' ')
    }));

    const searchBox = document.getElementById('searchBox');
    const count = document.getElementById('count');

    function runSearch(q) {
      q = (q || '').trim().toLowerCase();
      if (!q) {
        let visible = 0;
        items.forEach((it) => { it.el.style.display = ''; visible++; });
        count.textContent = `${visible} section${visible === 1 ? '' : 's'} shown.`;
        return;
      }
      const words = q.split(/\s+/);
      let matches = 0;
      items.forEach((it) => {
        const hay = `${it.title} ${it.keywords} ${it.text}`;
        const ok = words.every((w) => hay.includes(w));
        it.el.style.display = ok ? '' : 'none';
        if (ok) matches++;
      });
      count.textContent = `${matches} result${matches === 1 ? '' : 's'} for "${q}"`;
    }

    searchBox.addEventListener('input', (e) => runSearch(e.target.value));

    document.getElementById('year').textContent = new Date().getFullYear();
    document.getElementById('updated').textContent = new Date().toISOString().slice(0, 10);

    runSearch('');
  </script>
